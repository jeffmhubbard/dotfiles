# zathura/zathurarc

set font                        "Hack Nerd Font 10"
set default-bg                  "#000000"
set default-fg                  "#e9ebeb"

set highlight-color             "#adad27"
set highlight-active-color      "#14f0f0"

set statusbar-bg                "#000000"
set statusbar-fg                "#e9ebeb"

set inputbar-bg                 "#000000"
set inputbar-fg                 "#e9ebeb"

set notification-bg             "#000000"
set notification-fg             "#14f0f0"

set notification-error-bg       "#fc391f"
set notification-error-fg       "#000000"

set notification-warning-bg     "#14f0f0"
set notification-warning-fg     "#000000"

set completion-bg               "#000000"
set completion-fg               "#cbcccd"

set completion-group-bg         "#e9ebeb"
set completion-group-fg         "#000000"

set completion-highlight-bg     "#5833ff"
set completion-highlight-fg     "#000000"

set recolor-darkcolor           "#000000"
set recolor-lightcolor          "#e9ebeb"
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue             "true"

# Rest of your configs go here:
set window-title-basename       "true"
set window-title-home-tilde     "false"
set statusbar-basename          "false"
set statusbar-home-tilde        "true"
set pages-per-row 1

map = zoom in
map - zoom out
map + zoom best-fit
map f zoom width

set adjust-open best-fit
