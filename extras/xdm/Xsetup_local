#!/bin/sh

# Extra X settings
xsetroot -cursor_name left_ptr &

# Set random wallpaper
walsh -d /usr/share/backgrounds/antsy-nologo-lines -t 0 -b center &

# Shadows and transparency
compton --config /etc/X11/xdm/compton.conf &
echo $! >/var/run/xdm-compton.pid

# Custom polybar with clock and shudown\reboot menu
polybar -c /etc/X11/xdm/polybar.ini "$(hostname)" &
echo $! >/var/run/xdm-polybar.pid

#xconsole -geometry 430x200+10-34 -daemon -notify -verbose -exitOnFail

# vim: set ft=sh:
