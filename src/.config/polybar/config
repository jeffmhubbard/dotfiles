[module/xwindow]
type = internal/xwindow
pin-output = true
pin-show-last = true
format-prefix = ""
format-prefix-padding = 1
format-prefix-foreground = ${colors.background-alt}
label-margin = 0
label = %title:0:80:...%


[module/clock]
type = internal/date
interval = 1.0
time = "%I:%M %p"
time-alt = "%a, %b %d %I:%M %p"
format-prefix = " "
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %time%
label-alt = %time-alt%

[module/clock-full]
type = internal/date
interval = 1.0
date = "%a, %b %d"
time = "%I:%M %p"
format-prefix = " "
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %date% %time%


[module/keyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock

label-layout = 

label-indicator = "CAPS"
label-indicator-foreground = ${colors.foreground}
format-prefix = ""
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
format-underline = ${colors.active}


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %percentage:2%%


[module/temp]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %temperature-f%

format-warn = <ramp> <label-warn>
format-warn-padding = 1
format-warn-prefix-foreground = ${colors.background-alt}
format-warn-underline = ${colors.alert}
label-warn = %temperature-f%

ramp-0 = ""
ramp-1 = ""
ramp-2 = ""
ramp-foreground = ${colors.background-alt}


[module/mem]
type = internal/memory
interval = 2
format-prefix = " "
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %percentage_used%%


[module/fs]
; --- Template ---
type = internal/fs
interval = 30
fixed-values = false
spacing = 1

format-mounted = <label-mounted>
format-mounted-padding = 1
