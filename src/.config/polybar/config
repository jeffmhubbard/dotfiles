[module/clock]
type = internal/date
interval = 1.0
time = "%I:%M %p"
time-alt = "%a, %b %d %I:%M %p"

format-prefix = " "
format-padding = 1
format-prefix-foreground = ${colors.background-alt}

label = %time%
label-alt = %time-alt%

[module/clock-full]
type = internal/date
interval = 1.0
