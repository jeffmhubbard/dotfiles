[colors]
; full color palette
black    = ${xrdb:color0}
red      = ${xrdb:color1}
green    = ${xrdb:color2}
yellow   = ${xrdb:color3}
blue     = ${xrdb:color4}
magenta  = ${xrdb:color5}
cyan     = ${xrdb:color6}
white    = ${xrdb:color7}
hblack   = ${xrdb:color8}
hred     = ${xrdb:color9}
hgreen   = ${xrdb:color10}
hyellow  = ${xrdb:color11}
hblue    = ${xrdb:color12}
hmagenta = ${xrdb:color13}
hcyan    = ${xrdb:color14}
hwhite   = ${xrdb:color15}
; color aliases
background      = ${self.black}
background-alt  = ${self.hblack}
foreground      = ${self.hwhite}
foreground-alt  = ${self.white}
primary         = ${self.hblue}
primary-alt     = ${self.blue}
secondary       = ${self.hgreen}
secondary-alt   = ${self.green}
active          = ${self.hcyan}
active-alt      = ${self.cyan}
urgent          = ${self.hcyan}
urgent-alt      = ${self.cyan}
alert           = ${self.hred}
alert-alt       = ${self.red}


[settings]
screenchange-reload = true


[global/wm]
margin-top = 0
margin-bottom = 0


[bar/base]
; theme
width = 100%
height = 24
radius = 0.0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 1
line-color = ${colors.background-alt}
border-size = 0
border-color = ${colors.background-alt}
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
; font order
font-0 = Source Code Pro:pixelsize=9:style=bold;1
font-1 = FontAwesome:pixelsize=10;1
; notification tray
tray-position = right
tray-padding = 1
;tray-transparent = true
tray-background = ${colors.background}
; mouse actions
cursor-click = pointer
cursor-scroll = ns-resize

[bar/bottom]
inherit = bar/base
bottom = true
modules-left = bspwm xwindow
modules-center = date
modules-right = cpu temp mem fs bat-vbox vol eth-vbox

[bar/left]
inherit = bar/base
monitor = VGA-1
bottom = true
modules-left = bspwm xwindow
modules-center =
modules-right = date

[bar/right]
inherit = bar/base
monitor = DP-1
bottom = true
modules-left = bspwm xwindow
modules-center =
modules-right = cpu temp mem fs vol eth-ws

[module/bspwm]
type = internal/bspwm

