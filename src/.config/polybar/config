[module/xwindow]
type = internal/xwindow
pin-output = true
pin-show-last = true
format-prefix = "‚ñ´"
format-prefix-padding = 1
format-prefix-foreground = ${colors.background-alt}
label-margin = 0
;label-underline = ${colors.active-alt}
label = %title:0:120:...%


[module/date]
type = internal/date
interval = 1.0
date = "%a, %b %d %I:%M %p"
format-prefix = "ÔÄó "
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %date%


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ÔÉ§ "
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %percentage:2%%


[module/temp]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %temperature-f%

format-warn = <ramp> <label-warn>
format-warn-padding = 1
format-warn-prefix-foreground = ${colors.background-alt}
format-warn-underline = ${colors.alert}
label-warn = %temperature-f%

ramp-0 = "Ôãã"
ramp-1 = "Ôãâ"
ramp-2 = "Ôãá"
ramp-foreground = ${colors.background-alt}


[module/mem]
type = internal/memory
interval = 2
format-prefix = "Ôãõ "
format-padding = 1
format-prefix-foreground = ${colors.background-alt}
label = %percentage_used%%


[module/fs]
type = internal/fs
mount-0 = /
interval = 30
fixed-values = false
spacing = 1

format-mounted = <label-mounted>
format-mounted-padding = 1
format-mounted-prefix = "ÔáÄ "
format-mounted-prefix-foreground = ${colors.background-alt}
label-mounted = %percentage_used%%
#label-mounted-alt = %mountpoint%: %percentage_free%% of %total%

format-unmounted = <label-unmounted>
format-unmounted-padding = 1
format-unmounted-prefix = "ÔáÄ "
format-unmounted-prefix-foreground = ${colors.urgent}
format-unmounted-underline = ${colors.urgent}
label-unmounted = %mountpoint%: not mounted


[module/battery]
; base settings (for inherit only)
