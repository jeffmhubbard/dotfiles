; polybar/config

[colors]
; --- Palette ---
black           = ${xrdb:color0}
dark_grey       = ${xrdb:color8}
dark_red        = ${xrdb:color1}
red             = ${xrdb:color9}
dark_green      = ${xrdb:color2}
green           = ${xrdb:color10}
dark_yellow     = ${xrdb:color3}
yellow          = ${xrdb:color11}
dark_blue       = ${xrdb:color4}
blue            = ${xrdb:color12}
dark_magenta    = ${xrdb:color5}
magenta         = ${xrdb:color13}
dark_cyan       = ${xrdb:color6}
cyan            = ${xrdb:color14}
grey            = ${xrdb:color7}
white           = ${xrdb:color15}
; --- Aliases ---
background      = ${self.black}
background-alt  = ${self.dark_grey}
foreground      = ${self.white}
foreground-alt  = ${self.grey}
primary         = ${self.blue}
primary-alt     = ${self.dark_blue}
secondary       = ${self.green}
secondary-alt   = ${self.dark_green}
active          = ${self.white}
active-alt      = ${self.grey}
urgent          = ${self.cyan}
urgent-alt      = ${self.dark_cyan}
alert           = ${self.red}
alert-alt       = ${self.dark_red}

[settings]
screenchange-reload = false

[global/wm]
margin-top = 0
margin-bottom = 0


[bar/base-bottom]
; --- Template ---
width = 100%
height = 28
radius = 0.0
bottom = true
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = ${colors.background-alt}
border-size = 0
border-color = ${colors.background-alt}
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
tray-position = right
tray-padding = 1
tray-background = ${colors.background}
cursor-click = pointer
cursor-scroll = ns-resize
font-0 = Hack Nerd Font:pixelsize=10:style=bold;1
modules-left = bspwm xwindow
modules-center = 
modules-right = clock

; --- Inherit ---
[bar/dragon-bottom]
inherit = bar/base-bottom
modules-right = keyboard updates cpu temp mem fs-dragon volume eth-dragon clock

[bar/dragon-left]
inherit = bar/base-bottom
monitor = VGA-1
tray-position = right
modules-right = keyboard updates cpu temp mem fs-dragon volume eth-dragon

[bar/dragon-right]
inherit = bar/base-bottom
monitor = DP-1
tray-position = 
modules-right = clock-full

[bar/gargoyle-bottom]
inherit = bar/base-bottom
modules-right = keyboard updates cpu temp mem fs-gargoyle bat-gargoyle volume wifi-gargoyle clock

[bar/pegasus-bottom]
inherit = bar/base-bottom
modules-right = keyboard updates bat-pegasus volume wifi-pegasus clock


[module/bspwm]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = false
enable-scroll = false
reverse-scroll = false
fuzzy-match = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-default = 

format = <label-state> <label-mode>
format-padding = 0
label-monitor = %name%

label-focused = %icon%
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-dimmed-padding = 1
label-dimmed-foreground = ${colors.background-alt}
label-dimmed-focused-underline = ${colors.foreground}

label-occupied= %icon%
label-occupied-underline = ${colors.background-alt}
label-occupied-padding = 1

label-urgent = %icon%
label-urgent-underline = ${colors.urgent}
label-urgent-padding = 1

label-empty = %icon%
label-empty-padding = 1


[module/i3]
type = internal/i3
pin-workspaces = true
