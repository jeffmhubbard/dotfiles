[colors]
black           = ${xrdb:color0}
dark_grey       = ${xrdb:color8}
dark_red        = ${xrdb:color1}
red             = ${xrdb:color9}
dark_green      = ${xrdb:color2}
green           = ${xrdb:color10}
dark_yellow     = ${xrdb:color3}
yellow          = ${xrdb:color11}
dark_blue       = ${xrdb:color4}
blue            = ${xrdb:color12}
dark_magenta    = ${xrdb:color5}
magenta         = ${xrdb:color13}
dark_cyan       = ${xrdb:color6}
cyan            = ${xrdb:color14}
grey            = ${xrdb:color7}
white           = ${xrdb:color15}
transparent     = #cc000000

background      = ${self.transparent}
background-alt  = ${self.dark_grey}
foreground      = ${self.white}
foreground-alt  = ${self.grey}
primary         = ${self.blue}
primary-alt     = ${self.dark_blue}
secondary       = ${self.green}
secondary-alt   = ${self.dark_green}
active          = ${self.white}
active-alt      = ${self.grey}
urgent          = ${self.cyan}
urgent-alt      = ${self.dark_cyan}
alert           = ${self.red}
alert-alt       = ${self.dark_red}


[settings]
screenchange-reload = false
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0


[bar/base-bottom]
width = 100%
height = 28
radius = 0.0
bottom = true
fixed-center = true

override-redirect = false
;wm-restack = i3

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.background-alt}

border-size = 0
border-color = ${colors.background-alt}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

tray-position = right
tray-padding = 1
tray-background = ${colors.background}

cursor-click = pointer
cursor-scroll = ns-resize

font-0 = Hack Nerd Font:pixelsize=10:style=bold;1

modules-left = i3 xwindow
modules-center =
modules-right = clock

[bar/pythos-bottom]
inherit = bar/base-bottom
modules-right = keyboard upd-arch cpu mem fs-dt vol-dt eth-dt clock

[bar/pythos-left]
inherit = bar/base-bottom
monitor = DVI-I-1
tray-position =
modules-right = keyboard upd-arch cpu mem fs-dt vol-dt eth-dt

[bar/pythos-right]
inherit = bar/base-bottom
monitor = HDMI-0
tray-position = right
modules-right = clock-full

[bar/dragon-bottom]
inherit = bar/base-bottom
modules-right = keyboard upd-arch cpu temp mem fs-ws vol-ws eth-ws clock

[bar/dragon-left]
inherit = bar/base-bottom
monitor = VGA-1
tray-position = right
modules-right = keyboard upd-arch cpu temp mem fs-ws vol-ws eth-ws

[bar/dragon-right]
inherit = bar/base-bottom
monitor = DP-1
tray-position =
modules-right = clock-full

[bar/gargoyle-bottom]
inherit = bar/base-bottom
