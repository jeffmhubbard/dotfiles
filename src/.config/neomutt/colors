# --- vombatidae text colors ---
#  color normal         color230      default
#  color message        color230      default

# --- slightly less yellow text colors ---
color normal            white           default # mod
# color normal          color253        color233 # mod
#  color normal         color253        default # mod
color indicator         black           brightblue
color status            brightblack     default
#  color tree           color113        default
#  color tree           color173        default
color tree              brightblack     default
color signature         red             default
color message           default         default
color attachment        brightblue      default
color error             brightred       default
color tilde             brightblack     default

color search            black           yellow
color markers           cyan            default

color quoted        yellow      default             # quoted text
color quoted1       color66      default
color quoted2       color32      default
color quoted3       color30      default
color quoted4       color99      default
color quoted5       color36      default
color quoted6       color114     default
color quoted7       color109     default
color quoted8       color41      default
color quoted9       color138     default

color index         brightmagenta   default  ~F         # Flagged
color index         brightwhite     default  ~N         # New
color index         brightwhite     default  ~O
color index         black           yellow   ~T         # Tagged
color index         red             default  ~D         # Deleted


# --- header ---
color hdrdefault        default         default
color header            brightyellow    default    '^date:'
color header            brightblue      default    '^(to|cc|bcc):'
color header            brightgreen     default    '^from:'
color header            brightwhite     default    '^subject:'
color header            brightblack     default    '^user-agent:'
color header            brightgreen     default    '^reply-to:'

