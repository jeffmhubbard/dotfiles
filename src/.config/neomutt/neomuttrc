# neomutt/neomuttrc

# --- External ---
source $HOME/.config/neomutt/neomuttrc.priv
source $HOME/.config/neomutt/colors
source $HOME/.config/neomutt/sidebar
source $HOME/.config/neomutt/macros

# --- Paths ---
set header_cache = "~/.cache/neomutt/headers"
set message_cachedir = "~/.cache/neomutt/bodies"
set certificate_file = "~/.config/neomutt/certificates"

# --- Options ---
set index_format="%4C %Z %{%b %d %R} %-15.15L (%?l?%4l&%4c?) %s"
set sort=threads
set move = no
set imap_keepalive = 900
set sleep_time = 0
set new_mail_command="notify-send -a neomutt -u normal 'New Email' '%n new messages, %u unread.' &"
set beep = no
set sendmail="/usr/sbin/ssmtp"

set use_from = yes
set envelope_from                    # which from?
set sig_dashes                       # dashes before sig
set edit_headers                     # show headers when composing
set fast_reply                       # skip to compose when replying
set askcc                            # ask for CC:
set fcc_attach                       # save attachments with the body
unset mime_forward                   # forward attachments as part of body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set attribution = "%d %n:"           # reply quote header
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies
set forward_quote                    # include message in forwards
auto_view text/html

# --- Editor ---
set editor='vim + -c "set nocp" -c "set textwidth=72" -c "set wrap" -c "silent /^$" -c "noh" -c "vmap <leader>s c[... snip ...]<ESC>"'

# --- Status ---
set status_chars  = " *%A"
set status_format = "───────────────────┴──[F: %f]──[M:%r%m%?n?(%n new)?%?d?(%d to delete)?%?t?(%t tagged)?]───%>─%?p?(%p postponed)?───"


# vim: set ft=muttrc :
