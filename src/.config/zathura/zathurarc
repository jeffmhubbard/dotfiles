# linuxit

set font                        "Source Code Pro Bold 10"
set default-bg                  "#000000"
set default-fg                  "#ffffff"

set statusbar-fg                "#7f7f7f"
set statusbar-bg                "#000000"

set inputbar-bg                 "#000000"
set inputbar-fg                 "#ffffff"

set notification-error-bg       "#ff0000"
set notification-error-fg       "#000000"

set notification-warning-bg     "#00ffff"
set notification-warning-fg     "#000000"

set highlight-color             "#ffff00"
set highlight-active-color      "#00ffff"

set completion-highlight-fg     "#000000"
set completion-highlight-bg     "#5c5cff"

set completion-group-bg         "#ffffff"
set completion-group-fg         "#000000"

set completion-bg               "#000000"
set completion-fg               "#e5e5e5"

set notification-bg             "#000000"
set notification-fg             "#00ffff"

set recolor-lightcolor          "#ffffff"
set recolor-darkcolor           "#000000"
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue             "true"

