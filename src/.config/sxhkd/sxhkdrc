# --- Rofi ---
# window list
super + Tab
	rofi -show window
# desktop launcher
super + space
	rofi -show drun
# command launcher
super + grave
	rofi -show run
# rofi-session-menu
super + ctrl + equal
	rofi-session-menu
# rofi-randr
super + shift + equal
	rofi-randr

# --- Commands ---
# launch terminal
super + Return
	urxvt
# screenshot
Print
    scrot '%F_%H-%M-%S_$wx$h.png' -e 'mv $f ~/Screenshots/ ' && notify-send -u low 'Screenshot captured'
# screenshot focused window
shift + Delete
    scrot -u '%F_%H-%M-%S_$wx$h.png' -e 'mv $f ~/Screenshots/ ' && notify-send -u low'Screenshot captured'

# --- bspwm hotkeys ---
# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next
# swap the current node and the biggest node
super + shift + g
	bspc node -s biggest
# close and kill
super + {w,q}
	bspc node -{c,k}
# send the newest marked node to the newest preselected node
super + ctrl + g
	bspc node newest.marked.local -n newest.!automatic.local

# --- state/flags ---
# set the window state
super + {t,shift + t,f,shift + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# set the node flags
super + ctrl + {m,l,s,p}
   bspc node -g {marked,locked,sticky,private}

# --- focus/swap ---
# focus the node in the given direction
super + {_,shift + }{Up,Down,Left,Right}
   bspc node -{f,s} {north,south,west,east}
# focus the node for the given path jump
super + {a,c}
	bspc node -f @{parent,brother}
# focus monitor left/right
super + {comma,period}
	bspc monitor -f {west,east}
# focus the last node/desktop
super + {_,shift + }slash
	bspc {node,desktop} -f last
# rotate desktops
super + {_,shift} + r
  bspc node @/ -R {90,270}
# focus the older or newer node in the focus history
super + bracket{left,right}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on
# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# --- preselect ---
# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
super + ctrl + {Up,Down,Left,Right}
   bspc node -p {north,south,west,east}
# cancel the preselection for the focused node
super + Escape
	bspc node -p cancel
# cancel the preselection for the focused desktop
super + ctrl + Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# --- move/resize ---
# expand a window by moving one of its side outward
super + shift + {h,j,k,l}
   bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# contract a window by moving one of its side inward
super + shift + alt + {h,j,k,l}
   bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# move a floating window
super + alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# --- media keys ---
# raise or lower volume
XF86Audio{Raise,Lower}Volume
  pamixer -{i,d} 5
# toggle mute
XF86AudioMute
  pamixer -t
# toggle play and pause
XF86AudioPlay
  mpc toggle
# previous or next track
XF86Audio{Prev,Next}
  mpc -q {prev,next}

# vim: set ft=sh :
