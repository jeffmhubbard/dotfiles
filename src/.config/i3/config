# antsy 2018

# polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# defaults
workspace_layout            default
default_orientation         auto
focus_follows_mouse         no
popup_during_fullscreen     smart
focus_on_window_activation  smart
new_window                  pixel 1
new_float                   pixel 1

# for i3-gaps
gaps outer  10
gaps inner  20

# workspace labels
set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"

# default window rules
for_window [class=".*"]                 title_format " %title "
for_window [window_type="dialog"]       floating enable
for_window [window_type="menu"]         floating enable
for_window [window_role="messages"]     floating enable
for_window [window_role="pop-up"]       floating enable
for_window [window_role="task_dialog"]  floating enable
for_window [urgent=latest]              focus

# key bindings
set $super          Mod4
set $alt            Mod1
set $ctrl           Control
set $shft           Shift
floating_modifier   $super

# cursor keys
set $left           Left
set $up             Up
set $down           Down
set $right          Right

# change layout
bindsym $super+s	    layout stacking
bindsym $super+t        layout tabbed
bindsym $super+e        layout toggle split

# select container
bindsym $super+a        focus parent
bindsym $super+c        focus child

# split container
bindsym $super+h        split h
bindsym $super+v        split v

# fullscreen container
bindsym $super+f        fullscreen toggle

# floating container
bindsym $super+$ctrl+f  floating toggle
bindsym $super+$ctrl+m  focus mode_toggle

# resize container
set $resize_mode "ï‚²"
bindsym $super+r        mode $resize_mode
mode $resize_mode {
    bindsym Left   resize shrink width 10 px or 10 ppt
    bindsym Up     resize shrink height 10 px or 10 ppt
    bindsym Down   resize grow height 10 px or 10 ppt
    bindsym Right  resize grow width 10 px or 10 ppt
    bindsym Escape  mode "default"
}

# focus container
bindsym $super+$left            focus left
bindsym $super+$up              focus up
bindsym $super+$down            focus down
bindsym $super+$right           focus right

# move container
bindsym $super+$shft+$left      move left
bindsym $super+$shft+$up        move up
bindsym $super+$shft+$down      move down
bindsym $super+$shft+$right     move right

# go to workspace
bindsym $super+1        workspace $ws1
bindsym $super+2        workspace $ws2
bindsym $super+3        workspace $ws3
bindsym $super+4        workspace $ws4
bindsym $super+5        workspace $ws5
bindsym $super+6        workspace $ws6

# move to workspace
bindsym $super+$shft+1  move container to workspace $ws1
bindsym $super+$shft+2  move container to workspace $ws2
bindsym $super+$shft+3  move container to workspace $ws3
bindsym $super+$shft+4  move container to workspace $ws4
bindsym $super+$shft+5  move container to workspace $ws5
bindsym $super+$shft+6  move container to workspace $ws6

# kill window
bindsym $super+$ctrl+k  kill

# i3 session
bindsym $super+$ctrl+c  reload
bindsym $super+$ctrl+r  restart
#bindsym $super+$ctrl+q  exec gnome-session-quit --logout
bindsym $super+$ctrl+q  exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $super+$ctrl+l  exec gnome-screensaver-command -l

# rofi menus
bindsym $super+space    exec --no-startup-id rofi -show drun
bindsym $super+grave    exec --no-startup-id rofi -show run
bindsym $super+Tab      exec --no-startup-id rofi -show window

# terminal
bindsym $super+Return   exec --no-startup-id i3-sensible-terminal

# screenshot
bindsym --release $super+Print exec scrot -m '$HOME/Screenshots/%s_%H%M_%d.%m.%Y_$wx$h.png'
bindsym --release $super+$shft+Print exec scrot -s '$HOME/Screenshots/%s_%H%M_%d%m%Y_$wx$h.png'

# Pulse Audio controls
#bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
#bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
#bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym $super+F8 exec pactl set-sink-volume 0 +5%
bindsym $super+F7 exec pactl set-sink-volume 0 -5%
bindsym $super+F6 exec pactl set-sink-mute 0 toggle

#### style #####
font    pango:Source Sans Pro 10

# color palette from Xresources
set_from_resource $black        .color0     #000000
set_from_resource $red          .color1     #000000
set_from_resource $green        .color2     #000000
set_from_resource $yellow       .color3     #000000
set_from_resource $blue         .color4     #000000
set_from_resource $magenta      .color5     #000000
set_from_resource $cyan         .color6     #000000
set_from_resource $white        .color7     #000000

set_from_resource $hblack       .color8     #000000
set_from_resource $hred         .color9     #000000
set_from_resource $hgreen       .color10    #000000
set_from_resource $hyellow      .color11    #000000
set_from_resource $hblue        .color12    #000000
set_from_resource $hmagenta     .color13    #000000
set_from_resource $hcyan        .color14    #000000
set_from_resource $hwhite       .color15    #000000

# window colors          border     backgr.     text        indicator   child_border
client.focused           $hblue     $hblue      $white      $hblue      $hblue
client.focused_inactive  $black     $hblack     $black      $black      $black
client.unfocused         $black     $black      $white      $hblack     $black
client.urgent            $hcyan     $hcyan      $black      $hcyan      $hcyan
client.placeholder       $black     $black      $white      $black      $black
