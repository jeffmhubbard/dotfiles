!! Include color scheme
#include ".Xresources.antsy"

!! --- Fonts ---
Xft.autohint:                   0
Xft.lcdfilter:                  lcddefault
Xft.hintstyle:                  hintslight
Xft.hinting:                    1
Xft.antialias:                  1
Xft.rgba:                       rgb

!! --- Cursor ---
Xcursor.theme:                  whiteglass
Xcursor.size:                   16

!! --- URxvt ---
URxvt*title:                    URxvt
URxvt*termName:                 rxvt-unicode-256color
URxvt*depth:                    32
URxvt*saveLines:                2500
URxvt*urgentOnBell:             true
URxvt*internalBorder:           3
URxvt*lineSpace:                0
URxvt*scrollBar:                false
URxvt*cursorBlink:              true
URxvt*cursorUnderline:          true
URxvt*colorULMode:              on
URxvt.blurRadius:               2
URxvt*font:                     xft:SauceCodePro Nerd Font Mono:pixelsize=13:Regular
URxvt*boldFont:                 xft:SauceCodePro Nerd Font Mono:pixelsize=13:Bold
URxvt*perl-ext-common:          default,matcher
URxvt.url-launcher:             qutebrowser
URxvt.matcher.button:           1

!! --- Xterm ---
xterm*boldColors:               true
xterm*borderWidth:              0
xterm*charClass:                33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
xterm*cursorBlind:              true
xterm*cutNewLine:               false
xterm*dynamicColors:            true
xterm*faceName:                 SauceCodePro Nerd Font Mono,SauceCodePro Nerd Font Mono Semibold
xterm*faceSize:                 10
xterm*internalBorder:           4
xterm*pointerMode:              2
xterm*renderFont:               true
xterm*selectToClipboard:        true
xterm*termName:                 xterm-256color
xterm*toolBar:                  false

! vim: set filetype=xdefaults :
