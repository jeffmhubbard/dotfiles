! vim: set filetype=xdefaults :

!! --- Fonts ---
Xft.autohint:                   0
Xft.lcdfilter:                  lcddefault
Xft.hintstyle:                  hintslight
Xft.hinting:                    1
Xft.antialias:                  1
Xft.rgba:                       rgb

!! --- Cursor ---
Xcursor.theme:                  DMZ-Black
Xcursor.size:                   16

!! --- URxvt ---
URxvt*title:                    URxvt
URxvt*termName:                 rxvt-unicode-256color
URxvt*depth:                    32
URxvt*saveLines:                2500
URxvt*urgentOnBell:             true
URxvt*internalBorder:           0
URxvt*lineSpace:                0
URxvt*scrollBar:                false
URxvt*cursorBlink:              true
URxvt*cursorUnderline:          true
URxvt*colorULMode:              on
URxvt.blurRadius:               2
URxvt*font:                     xft:Source Code Pro:pixelsize=12:Regular
URxvt*boldFont:                 xft:Source Code Pro:pixelsize=12:Bold
URxvt*italicFont:               xft:Source Code Pro:pixelsize=12:Regular Italic
URxvt*italicBoldFont:           xft:Source Code Pro:pixelsize=12:Bold Italic
URxvt*perl-ext-common:          default,matcher,clipboard
URxvt.url-launcher:             /usr/bin/xdg-open
URxvt.url-select.autocopy:      true
URxvt.url-select.underline:     true
URxvt.matcher.button:           1

!! --- rofi ---
rofi.color-enabled: true
rofi.color-window: argb:f2000000, argb:f2000000, argb:f200ffff
rofi.color-normal: argb:00000000, #e5e5e5, argb:00000000, #5c5cff, #000000
rofi.color-active: argb:00000000, #00ffff, argb:00000000, #00ffff, #000000
rofi.color-urgent: argb:00000000, #ffffff, argb:00000000, #5c5cff, #ff0000

! Comment out next line if using pywal
#include ".Xresources.ansi"
